{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make all",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}/image-display"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run image-display",
            "type": "shell",
            "command": "${workspaceFolder}/image-display/scripts/run-image-display.sh",
            "args": [
                "--led-cols=64",
                "--led-rows=64",
                "--led-chain=2",
                "--led-slowdown-gpio=3",
                "${workspaceFolder}/image-display/test/test.png"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": false
            },
            "dependsOn": ["make all"],
        },
        {
            "label": "Run image-sender",
            "type": "shell",
            "command": "${workspaceFolder}/image-sender/venv/bin/python",
            "args": [
                "${workspaceFolder}/image-sender/main.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "clear": false
            }
        }
    ]
}