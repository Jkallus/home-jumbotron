    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug image-display",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/image-display/bin/image-display",
            "args": ["--led-cols=64", "--led-rows=64", "--led-chain=2", "${workspaceFolder}/image-display/test/test.png"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "miDebuggerPath": "${workspaceFolder}/image-display/scripts/gdb-sudo.sh",
            "preLaunchTask": "make all"
        },
        {
            "name": "Debug image-sender",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/image-sender/main.py",
            "args": [],
            "console": "integratedTerminal",
        }
    ]
}